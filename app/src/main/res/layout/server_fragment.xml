<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reader_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="@string/server_name" />

    <EditText
        android:id="@+id/reader_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/reader_name_text"
        android:inputType="text"
        android:text="@string/server_default" />

    <TextView
        android:id="@+id/reader_ip_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reader_name"
        android:padding="10dp"
        android:text="@string/server_ip" />

    <EditText
        android:id="@+id/reader_ip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reader_name"
        android:layout_toRightOf="@+id/reader_ip_text"
        android:inputType="text"
        android:text="@string/server_default_ip" />

    <TextView
        android:id="@+id/reader_port_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reader_ip_text"
        android:padding="10dp"
        android:text="@string/server_port" />

    <EditText
        android:id="@+id/reader_port"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reader_ip_text"
        android:layout_toRightOf="@+id/reader_port_text"
        android:inputType="number"
        android:text="@string/server_default_port" />

    <Button
        android:id="@+id/reader_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/reader_port_text"
        android:text="@string/save" />

    <Button
        android:id="@+id/reader_button_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reader_port_text"
        android:layout_toRightOf="@+id/reader_button_save"
        android:layout_toLeftOf="@+id/reader_button_cancel"
        android:text="@string/delete" />

    <Button
        android:id="@+id/reader_button_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reader_port_text"
        android:text="@string/cancel" />

</RelativeLayout>
